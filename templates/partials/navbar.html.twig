{# Définition des objets de la barre de navigation #}

{% set admin_items=[
    {'label':'Gestion des articles', 'route':'article_index'},
    {'label':'Gestion des catégories', 'route':'category_index'},
]%}

<nav class="navbar navbar-expand-lg bg-dark-subtle" data-bs-theme="dark">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Mon blog</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
      

        {# Si l'utilisateur est connecté #}
        {% if app.user %}

        {# Si l'utilisateur est un administrateur #}
        {% if is_granted('ROLE_ADMIN') %}
         <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle text-warning" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Espace administrateur
          </a>
          <ul class="dropdown-menu">
            {# Actions administrateur possibles #}
            {% for item in admin_items %}
             <li>
              <a class="dropdown-item {{app.request.get('_route') == item.route ? 'active':''}}" href="{{path(item.route)}}">{{item.label}}</a>
              </li>
            {% endfor %}
          </ul>
          </li>
        {% endif %}

        <li class='nav-item'>
        <span class='nav-link'>Bonjour, {{app.user.userIdentifier}} !</span>
        </li>
        <li class='nav-item'>
        <a class='nav-link' href='{{path('app_logout')}}'>Déconnexion</a>
        </li> 
        {% else %}

        {# Si l'utilisateur est anonyme #}
        <li class='nav-item'>
        <a class='nav-link' href='{{path('app_login')}}'>Connexion</a>
        </li>
        <li class='nav-item'>
        <a class='nav-link' href='{{path('app_register')}}'>Inscription</a>
        </li>
        {% endif %}
      </ul>
      <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"/>
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
    </div>
  </div>
</nav>